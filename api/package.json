    "eslint": "^8.56.0",
    "pg": "^8.11.3",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@adonisjs/core": "^6.2.2",
    "@adonisjs/mail": "^9.2.0",
    "@lucia-auth/adapter-drizzle": "^1.0.1",
    "@vinejs/vine": "^1.7.1",
    "dayjs": "^1.11.10",
    "drizzle-orm": "^0.29.3",
    "edge.js": "^6.0.1",
    "lucia": "^3.0.1",
